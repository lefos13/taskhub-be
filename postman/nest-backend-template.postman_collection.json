{
  "info": {
    "_postman_id": "5b8a3c0d-1234-4f0a-9c1d-abcdefabcdef",
    "name": "Nest Backend Template",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json",
    "description": "Postman collection for the NestJS backend template. Includes auth token generation and protected routes."
  },
  "item": [
    {
      "name": "Auth",
      "item": [
        {
          "name": "Generate Token",
          "request": {
            "method": "POST",
            "header": [{ "key": "Content-Type", "value": "application/json" }],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"deviceId\": \"{{deviceId}}\"\n}"
            },
            "url": {
              "raw": "{{baseUrl}}/auth/token",
              "host": ["{{baseUrl}}"],
              "path": ["auth", "token"]
            }
          },
          "response": []
        }
      ]
    },
    {
      "name": "Protected",
      "item": [
        {
          "name": "Profile",
          "request": {
            "method": "GET",
            "header": [
              { "key": "Authorization", "value": "Bearer {{authToken}}" }
            ],
            "url": {
              "raw": "{{baseUrl}}/protected/profile",
              "host": ["{{baseUrl}}"],
              "path": ["protected", "profile"]
            }
          },
          "response": []
        },
        {
          "name": "Device Info",
          "request": {
            "method": "GET",
            "header": [
              { "key": "Authorization", "value": "Bearer {{authToken}}" }
            ],
            "url": {
              "raw": "{{baseUrl}}/protected/device-info",
              "host": ["{{baseUrl}}"],
              "path": ["protected", "device-info"]
            }
          },
          "response": []
        }
      ]
    },
    {
      "name": "Root",
      "item": [
        {
          "name": "Hello",
          "request": {
            "method": "GET",
            "url": {
              "raw": "{{baseUrl}}/",
              "host": ["{{baseUrl}}"],
              "path": [""]
            }
          },
          "response": []
        }
      ]
    }
  ],
  "event": [
    {
      "listen": "test",
      "script": {
        "exec": [
          "// Auto-capture token after generating it",
          "if (pm.request.url.path.join('/') === 'auth/token' && pm.response.code === 200) {",
          "  try {",
          "    const json = pm.response.json();",
          "    const token = json?.data?.token;",
          "    if (token) {",
          "      pm.environment.set('authToken', token);",
          "    }",
          "  } catch (e) { /* ignore */ }",
          "}"
        ],
        "type": "text/javascript"
      }
    }
  ],
  "variable": [
    { "key": "baseUrl", "value": "http://localhost:3000" },
    { "key": "deviceId", "value": "device-123" },
    { "key": "authToken", "value": "" }
  ]
}
